<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="ltm.service"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="16"/>
    
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true" android:theme="@android:style/Theme.Holo.Light">
        
        <activity android:name="ltm.service.ActivityLaunching"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ActivityLaunched"
                  android:label=".ActivityLaunched">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE2" />
            </intent-filter>
        </activity>
        
        <service android:enabled="true"
         	android:exported="true"
         	android:label="ServiceLTM"
         	android:name="ServiceLTM">
            
        </service>

    </application>


</manifest> 










